<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dialog_btn_press" />
            <corners android:bottomLeftRadius="@dimen/dialog_bottom_btn_radius" android:bottomRightRadius="@dimen/dialog_bottom_btn_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/dialog_btn_normal" />
            <corners android:bottomLeftRadius="@dimen/dialog_bottom_btn_radius" android:bottomRightRadius="@dimen/dialog_bottom_btn_radius" />
        </shape>
    </item>
</selector>